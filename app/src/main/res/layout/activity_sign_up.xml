<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Activities.SignUpActivity">

    <ImageView
        android:id="@+id/TreksLogo"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/logo"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:paddingTop="0dp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TreksLogo">

        <EditText
            android:id="@+id/signUpEmail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="10dp"
            android:background="#a2d7f5"
            android:inputType="textEmailAddress"
            android:hint="EMAIL"
            />

        <EditText
            android:id="@+id/signUpPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="10dp"
            android:background="#a2d7f5"
            android:inputType="textPassword"
            android:hint="PASSWORD"
            />

        <EditText
            android:id="@+id/signUpConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:background="#a2d7f5"
            android:inputType="textPassword"
            android:hint="CONFIRM PASSWORD"
            />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_background"
            android:textColor="#4e74a5"
            android:text="Sign Up"
            android:elevation="15dp"
            />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/signup_gsoButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:elevation="15dp"
            />


    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/signUpTermsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:background="@android:color/transparent"
            android:text="TERMS AND CONDITIONS"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:background="#4aade8"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/signUpSkipButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35dp"
                android:minWidth="0dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:text="SKIP" />

            <Button
                android:id="@+id/signUpLoginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="35dp"
                android:minWidth="0dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:text="LOGIN"/>

        </RelativeLayout>


        </LinearLayout>

</RelativeLayout>